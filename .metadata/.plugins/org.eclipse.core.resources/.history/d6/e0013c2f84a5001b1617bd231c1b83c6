
public class _4__Expressions {

	public static void main(String[] args) {
		// expression = operands & operators
		// operands = values, variables, numbers, quantities
		// operators = +, -, *, /, %
		int friends = 10;

		friends = friends - 1;
		friends -= 1;
		friends--;
		System.out.println("Friends: " + friends);

		friends = friends + 1;
		friends += 1;
		friends++;
		System.out.println("Friends: " + friends);

		friends = friends * 2;
		friends *= 2;
		System.out.println("Friends: " + friends);

		friends = friends / 1;
		friends /= 1;
		System.out.println("Friends: " + friends);

		friends = friends % 3;
		friends %= 4;
		friends--;
		System.out.println("Friends: " + friends);
	}

}
